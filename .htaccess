# Activer la réécriture d'URL
RewriteEngine On

# Force HTTPS (si votre site est en HTTPS)
RewriteCond %{HTTPS} off
RewriteRule ^ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]

# Protéger les fichiers sensibles
<FilesMatch "\.(htaccess|htpasswd|ini|log|conf|env)$">
    Order Deny,Allow
    Deny from all
</FilesMatch>

# Compression pour améliorer la performance
<IfModule mod_deflate.c>
    AddOutputFilterByType DEFLATE text/plain text/html text/xml text/css application/x-javascript application/javascript application/json
</IfModule>

# Cache des fichiers statiques pour améliorer la vitesse
<IfModule mod_expires.c>
    ExpiresActive On
    ExpiresDefault "access plus 1 month"
    ExpiresByType image/jpg "access plus 1 month"
    ExpiresByType image/jpeg "access plus 1 month"
    ExpiresByType image/gif "access plus 1 month"
    ExpiresByType image/png "access plus 1 month"
    ExpiresByType text/css "access plus 1 month"
    ExpiresByType application/javascript "access plus 1 month"
    ExpiresByType application/x-javascript "access plus 1 month"
</IfModule>

# Protection contre le Hotlinking d'images
RewriteCond %{HTTP_REFERER} !^$
RewriteCond %{HTTP_REFERER} !^http(s)?://(www\.)?votresite.com [NC]
RewriteRule \.(jpg|jpeg|png|gif|bmp)$ - [F]

# Interdire l'accès aux répertoires sans index
Options -Indexes

# Protéger le fichier .htaccess lui-même
<Files .htaccess>
    Order Deny,Allow
    Deny from all
</Files>

# Redirection des pages d'erreur (404, etc.)
ErrorDocument 404 /404.html

# Autoriser les fichiers PHP uniquement dans certains répertoires
<Directory "/chemin/vers/votre/dossier/php">
    php_admin_value open_basedir /chemin/vers/votre/dossier/php:/chemin/vers/votre/autre/dossier
</Directory>

# Protection contre les attaques par injection
<IfModule mod_security.c>
    SecFilterEngine On
    SecFilterScanPOST On
</IfModule>

# Réécriture d'URL propre (pour des URLs lisibles et sans extension)
RewriteRule ^([a-zA-Z0-9-]+)/?$ /index.php?category=$1 [L,QSA]
